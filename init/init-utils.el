;;----------------------------------------------------------------------------
;; Convert buffer Unix <-> Dos
;;----------------------------------------------------------------------------
(defun dos-unix ()
  "Convert buffer from DOS to Unix."
  (interactive)
  (goto-char (point-min))
  (while (search-forward "\r" nil t) (replace-match "")))

(defun unix-dos ()
  "Convert buffer from Unix to DOS."
  (interactive)
  (goto-char (point-min))
  (while (search-forward "\n" nil t) (replace-match "\r\n")))

;; Emacs key binding alias
(defmacro defkbalias (new old)
  `(define-key (current-global-map) ,new
     (lookup-key (current-global-map) ,old)))

